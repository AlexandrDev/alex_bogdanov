extends ./components/_layout.pug
block variables
    - var title = 'Оформленные заказы - Личный кабинет'
    - var mainCls = 'page-account'

block content
    .page-top.container
        .breadcrumbs
            .breadcrumbs__item
                a(href=home_link) Главная
            .breadcrumbs__item
                a(href=lk_link) Личный кабинет
            .breadcrumbs__item
                span Оформленные заказы
        h1.page-top__title.like-h1 Оформленные заказы


    .container
        .row
            .col-xl-3.d-none.d-xl-block
                include ./components/_account-sidebar

            .page-account__left.col-xl-9
                .like-h3 Оформленные заказы
                p Узнавайте о состоянии осуществленных вами заказов. Если заказы отправлены по вашему адресу, то вы можете посмотреть ссылки для их отслеживания.


                .orders.row
                    .orders__col.col-md-6
                        .order-item
                            a(href="").order-item__gallery
                                .item
                                    img(src="images/dev/prod-thumb3.png", alt="").item__img
                                .item
                                    img(src="images/dev/prod-thumb2.png", alt="").item__img
                                .item
                                    img(src="images/dev/prod-thumb.png", alt="").item__img
                                .item.item_more
                                    .more-count +2

                            .order-item__info
                                a(href="").order-item__number № 430510846
                                .order-item__details
                                    p 15 мая 2020
                                    p 222 000 ₽
                                .order-status.wait Ждет оплаты
