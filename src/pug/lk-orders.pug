                                // .order-status.transfer В пути
                                // .order-status.delivered Доставлено
                                // .order-status.canceled Отменен

                                a(href="").order-item__view.link-detailed
                    .orders__col.col-md-6
                        .order-item
                            a(href="").order-item__gallery
                                .item
                                    img(src="images/dev/prod-thumb3.png", alt="").item__img
                                .item
                                    img(src="images/dev/prod-thumb2.png", alt="").item__img
                                .item
                                .item

                            .order-item__info
                                a(href="").order-item__number № 430510846
                                .order-item__details
                                    p 15 мая 2020
                                    p 222 000 ₽
                                .order-status.assemble В сборке

                                .order-item__view
                                    a(href="").link-detailed
                    .orders__col.col-md-6
                        .order-item
                            a(href="").order-item__image
                                img(src="images/dev/prod-thumb3.png", alt="")

                            .order-item__info
                                a(href="").order-item__number № 430510846
                                .order-item__details
                                    p 15 мая 2020
                                    p 222 000 ₽
                                .order-status.delivered Доставлено

                                a(href="").order-item__view.link-detailed

                            

                .order-detail
                    .page-account__back
                        a(href="").back-arrow
                            include ../svg-min/back-arrow-checkStock.svg
                            span Вернуться назад
                    .order-detail__title.like-h3 
                        span Детали заказа № 150010846 от 3 апреля 2018
                        .order-status.assemble В сборке
                    
                    .order-detail__main-info.row
                        .main-info.col-lg-4.col-md-6
                            .main-info__title Получатель
                            p Жираф Полосатый, +7 912 345-67-89
                        .main-info.col-lg-6.col-md-6
                            .main-info__title Способ оплаты
                            p Онлайн оплата
                        .main-info.col-lg-4.col-md-6
                            .main-info__title Способ доставки
                            p Курьерская доставка
                        .main-info.col-lg-6.col-md-6
                            .main-info__title Адрес доставки
                            p г. Омск, Омская область, ул. Лопухина, 45/2, 134, на всякий случай адрес в три супердлинные строки


                    .order-detail__table
