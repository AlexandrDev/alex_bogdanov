extends ./components/_layout.pug
block variables
    - var title = 'Адреса доставки - Личный кабинет'
    - var mainCls = 'page-account'

block content
    .page-top.container
        .breadcrumbs
            .breadcrumbs__item
                a(href=home_link) Главная
            .breadcrumbs__item
                a(href=lk_link) Личный кабинет
            .breadcrumbs__item
                span Адреса доставки
        h1.page-top__title.like-h1 Адреса доставки


    .container
        .row
            .col-xl-3.d-none.d-xl-block
                include ./components/_account-sidebar

            .page-account__left.col-xl-9
                .page-account__block
                    .shipping-address
