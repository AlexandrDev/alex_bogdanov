                        form(action="")
                            .row
                                .col-md-6
                                    .input-item
                                        input(type="text").input
                                        label Имя
                                .col-md-6
                                    .input-item
                                        input(type="text").input
                                        label Фамилия
                                .col-md-6
                                    .input-item
                                        input(type="tel").input
                                        label Номер телефона
                            hr
                            .row
                                .col-md-6
                                    .input-item
                                        select(name="", data-placeholder="Область/Район")
                                            option
                                            option(value="asd1") asd1
                                            option(value="asd2") asd2
                                            option(value="asd3") asd3
                                .col-md-6
                                    .input-item
                                        select(name="", data-placeholder="Населенный пункт")
