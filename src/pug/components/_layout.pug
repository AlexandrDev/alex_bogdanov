block variables
- var home_link = 'homepage.html'
- var catalog_link = 'catalog.html'
- var category_link = 'category.html'
- var version = 'v0.1.7'

doctype html
html(lang="ru")
    head
        title #{title}
        meta(charset="UTF-8")
        meta#mvp(name="viewport", content="width=device-width,initial-scale=1,maximum-scale=1")
        script
            | function svp(){let e=screen.width<=360?"width=360,user-scalable=no":"width=device-width,initial-scale=1,maximum-scale=1";document.getElementById("mvp").setAttribute("content",e)}svp();window.onresize=function(n){svp()}
        link(rel="stylesheet" href='https://fonts.googleapis.com/css2?family=Literata:wght@400;600;700&display=swap')
        link(rel="stylesheet" href='css/normalize.min.css')
        link(rel="stylesheet" href='css/bootstrap-grid-custom.min.css')
        link(rel="stylesheet" href='css/flickity.min.css')
        link(rel="stylesheet" href='css/jquery.fancybox.min.css')
        link(rel="stylesheet" href='css/stylesheet.css?' + version)
        block styles
    body
        include _header.pug

        .page-wrapper(class="" + mainCls)
            block content

        include _footer.pug

        include _forms.pug

        script(src="js/jquery.min.js")
        script(src="js/vue.min.js")
        script(src="js/jquery.bootstrap.custom.min.js")
        script(src="js/jquery.flickity.pkgd.min.js")
        script(src="js/jquery.flickity-fade.min.js")
        script(src="js/jquery.fancybox.min.js")
        script(src="js/vue.autocomplete.min.js")
        script(src="js/scripts.js?" + version)
        block scripts